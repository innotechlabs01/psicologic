---
const { title, subtitle } = Astro.props;
---

<!-- Componente wrapper que garantiza alineación consistente -->
<div class="container mx-auto space-y-6">
  
  <!-- Header consistente para todas las páginas -->
  {title && (
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 border border-gray-200 dark:border-gray-700">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
        {title}
      </h1>
      {subtitle && (
        <p class="text-gray-600 dark:text-gray-400">
          {subtitle}
        </p>
      )}
    </div>
  )}
  
  <!-- Contenido de la página -->
  <slot />
</div>

<style>
  @reference "tailwindcss";
  /* Estilos para mantener consistencia */
  :global(.dashboard-card) {
    @apply bg-white dark:bg-gray-800 rounded-lg shadow-sm p-6 border border-gray-200 dark:border-gray-700;
  }
  
  :global(.dashboard-grid) {
    @apply grid gap-6;
  }
  
  :global(.dashboard-grid-cols-1) {
    @apply grid-cols-1;
  }
  
  :global(.dashboard-grid-cols-2) {
    @apply md:grid-cols-2;
  }
  
  :global(.dashboard-grid-cols-3) {
    @apply lg:grid-cols-3;
  }
  
  :global(.dashboard-grid-cols-4) {
    @apply lg:grid-cols-4;
  }
  
  :global(.dashboard-button-primary) {
    @apply bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium transition-colors;
  }
  
  :global(.dashboard-button-secondary) {
    @apply bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 text-gray-900 dark:text-white px-4 py-2 rounded-lg font-medium transition-colors;
  }
  
  :global(.dashboard-input) {
    @apply w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white;
  }
</style>