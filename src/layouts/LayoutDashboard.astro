---
// src/layouts/LayoutDashboard.astro
import Header from "../components/Header/header.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/css/main.css">
    <title>{title}</title>
  </head>
  
  <body class="min-h-screen bg-gray-100 dark:bg-gray-900">
    <!-- Header con sidebar incluido -->
    <Header />
    
    <!-- Contenedor principal que respeta el espacio del sidebar -->
    <div class="flex min-h-screen">
      <!-- Espacio reservado para el sidebar (invisible pero mantiene el layout) -->
      <div class="hidden sm:block sm:w-64 flex-shrink-0"></div>
      
      <!-- Contenido principal alineado -->
      <main class="flex-2 w-full sm:w-auto">
        <div class="p-6 max-w-full">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    background: #f9fafb;
    color-scheme: light dark;
    margin: 0;
    width: 100%;
    height: 100%;
  }
  
  /* Asegurar que el contenido no se superponga con el sidebar */
  @media (min-width: 640px) {
    body {
      padding-left: 0; /* El layout flex se encarga del espaciado */
    }
  }
  
  /* Prevenir overflow horizontal */
  main {
    overflow-x: hidden;
  }
</style>